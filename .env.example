# ===================================================================
# Aura V24 Autonomous & Holistic System - Environment Configuration
# ===================================================================
# 
# This file contains all environment variables required for the complete
# Aura system including AI services, Blender integration, and diagnostics.
# 
# Setup Instructions:
# 1. Copy this file to .env: cp .env.example .env
# 2. Update the values below to match your system configuration
# 3. Ensure all required services are installed and accessible
# ===================================================================

# --- Core System Configuration ---
ENVIRONMENT=development
DEBUG_MODE=true
LOG_LEVEL=INFO
SYSTEM_NAME=Aura V24 Autonomous Design Engine

# --- LM Studio Configuration ---
# LM Studio server configuration for local LLM services
LM_STUDIO_HOST=localhost
LM_STUDIO_PORT=1234
LM_STUDIO_URL=http://localhost:1234/v1/chat/completions
LM_STUDIO_MODEL_NAME=meta-llama-3.1-8b-instruct
LM_STUDIO_API_KEY=
LM_STUDIO_MAX_TOKENS=4096
LM_STUDIO_TEMPERATURE=0.7
LM_STUDIO_TIMEOUT=30

# LM Studio Endpoints (auto-configured based on host/port)
LM_STUDIO_MODELS_ENDPOINT=http://localhost:1234/v1/models
LM_STUDIO_CHAT_ENDPOINT=http://localhost:1234/v1/chat/completions
LM_STUDIO_COMPLETIONS_ENDPOINT=http://localhost:1234/v1/completions
LM_STUDIO_EMBEDDINGS_ENDPOINT=http://localhost:1234/v1/embeddings

# --- AI Server Configuration ---
AI_SERVER_HOST=0.0.0.0
AI_SERVER_PORT=8002
AI_SERVER_URL=http://localhost:8002
AI_SERVER_WORKERS=1
AI_SERVER_TIMEOUT=300
AI_SERVER_MAX_REQUESTS=100

# Shap-E Model Configuration
SHAP_E_MODEL_PATH=
SHAP_E_CACHE_DIR=./cache/shap_e
SHAP_E_FP16_OPTIMIZATION=true
SHAP_E_VRAM_LIMIT=8192

# --- Backend Orchestrator Configuration ---
BACKEND_HOST=localhost
BACKEND_PORT=8001
BACKEND_URL=http://localhost:8001
BACKEND_WORKERS=1

# --- Sandbox Configuration ---
SANDBOX_MODE=false
SANDBOX_SERVER_HOST=0.0.0.0
SANDBOX_SERVER_PORT=8003
SANDBOX_SERVER_URL=http://localhost:8003

# --- Blender Integration ---
# Path to Blender executable (update for your system)
BLENDER_PATH=C:\Program Files\Blender Foundation\Blender 4.5\blender.exe
# Linux/Mac example: BLENDER_PATH=/usr/bin/blender

# Blender script paths (relative to project root)
BLENDER_PROC_SCRIPT=blender_proc.py
BLENDER_SIM_SCRIPT=blender_sim.py
BLENDER_ADDON_PATH=.

# Blender execution settings
BLENDER_BACKGROUND=true
BLENDER_PYTHON_USE_SYSTEM_ENV=true
BLENDER_TIMEOUT=120

# --- File System Configuration ---
OUTPUT_DIR=./output
MODELS_DIR=./models
GENERATED_MODELS_DIR=./models/generated
FALLBACK_MODELS_DIR=./models/fallback
ASSETS_DIR=./assets
CACHE_DIR=./cache
LOGS_DIR=./logs
TMP_DIR=./tmp

# --- External API Configuration ---
HUGGINGFACE_API_KEY=
HUGGINGFACE_API_URL=https://api-inference.huggingface.co/models/meta-llama/Meta-Llama-3.1-8B-Instruct
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# --- Database Configuration ---
# (Currently not used, but reserved for future features)
DATABASE_URL=sqlite:///./aura.db
REDIS_URL=redis://localhost:6379/0

# --- Monitoring and Diagnostics ---
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30
PERFORMANCE_MONITORING=true
GPU_MONITORING=true
MEMORY_MONITORING=true

# --- Security Configuration ---
API_RATE_LIMIT=100
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
SECRET_KEY=your-secret-key-here-change-this-in-production

# --- Feature Flags ---
ENABLE_SHAP_E=true
ENABLE_NATIVE_BLENDER=true
ENABLE_WEB_INTERFACE=false
ENABLE_REAL_TIME_PREVIEW=false
ENABLE_BATCH_PROCESSING=false
ENABLE_CLOUD_SYNC=false

# --- Mesh Generation Settings ---
DEFAULT_MESH_QUALITY=64
MIN_MESH_QUALITY=16
MAX_MESH_QUALITY=256
MESH_OPTIMIZATION=true

# --- Network Configuration ---
REQUEST_TIMEOUT=30
CONNECT_TIMEOUT=10
MAX_RETRIES=3
RETRY_DELAY=1

# --- Logging Configuration ---
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_BACKUP_COUNT=5
LOG_TO_FILE=true
LOG_TO_CONSOLE=true

# --- Development and Testing ---
TESTING_MODE=false
MOCK_AI_RESPONSES=false
DISABLE_GPU=false
SKIP_MODEL_LOADING=false
ENABLE_DEBUG_ENDPOINTS=false

# --- System Resource Limits ---
MAX_MEMORY_GB=8
MAX_GPU_MEMORY_GB=8
MAX_CONCURRENT_REQUESTS=5
MAX_GENERATION_TIME=300
MAX_FILE_SIZE_MB=100